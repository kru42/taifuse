Language: Cpp
BasedOnStyle: LLVM

# Brace breaking style
BreakBeforeBraces: Allman

# Indentation and alignment options
AccessModifierOffset: -4
AlignAfterOpenBracket: true
AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true
AlignConsecutiveMacros: true
AlignEscapedNewlines: Left
AlignOperands: true
AlignTrailingComments: true
CommentPragmas: none
AllowAllArgumentsOnNextLine: false
AllowAllConstructorInitializersOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortBlocksOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false

# Pointer and reference alignment
PointerAlignment: Left
ReferenceAlignment: Left

# Column limit: you might want to adjust this
ColumnLimit: 120

# Include ordering: add your own categories if needed
#IncludeCategories:
#  - Regex:           '^<.*\.h>'
#    Priority:        1
#  - Regex:           '^<.*'
#    Priority:        2
#  - Regex:           '^\".*\.h\"'
#    Priority:        3
#  - Regex:           '^\".*'
#    Priority:        4

SortIncludes: false

# Use tab or spaces for indentation
UseTab: Never
IndentWidth: 4
TabWidth: 4
ContinuationIndentWidth: 4

# C++20 requires a more nuanced handling of templates and concepts
SpaceAfterTemplateKeyword: true
SpacesInAngles: false

# Other spacing options
SpaceBeforeParens: ControlStatements
# SpaceAroundOperators: true